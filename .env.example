# =============================================================================
# LLM PROVIDER SELECTION
# =============================================================================
LLM_PROVIDER=gemini  # Primary: "gemini", Fallback: "openai"

# =============================================================================
# GEMINI CONFIGURATION (PRIMARY PROVIDER)
# =============================================================================
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-from-aistudio.google.com
GEMINI_MODEL=gemini-2.5-pro
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=8192

# =============================================================================
# OPENAI CONFIGURATION (FALLBACK PROVIDER)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# Note: gpt-5-nano is a reasoning model. Reasoning tokens consume from max_tokens
# budget, so max_tokens must be high enough to accommodate both reasoning and output.
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-5-nano
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=32768

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=false

# CORS - Comma-separated list of allowed origins
# Leave empty to allow all origins in debug mode
# Example: https://127.0.0.1:5000,http://localhost:3000
CORS_ALLOWED_ORIGINS=

# =============================================================================
# TIMEOUTS & RETRIES
# =============================================================================
LLM_TIMEOUT_SECONDS=60
LLM_MAX_RETRIES=3

# =============================================================================
# RATE LIMITING (per-IP, per-minute)
# =============================================================================
# Higher limits for internal service-to-service calls
# RATE_LIMIT_CLASSIFY=100/minute
# RATE_LIMIT_GENERATE=100/minute
# RATE_LIMIT_GATES=100/minute

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
